@model Vacation.Web.Models.RequestMasterVacation
<form asp-action="Edit" method="post">
    <div class="main">

        <main class="p-3">
            <div class="container-fluid">
                <div class="mb-3 text-center">

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon3">ID</span>
                        </div>
                        <input type="text" class="form-control"  value="@Model.Id">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon3">Name</span>
                        </div>
                        <input type="text" class="form-control" value="@Model.Employee?.Name">

                    </div>

                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon3">Request Date</span>
                        </div>

                        <input type="date" class="form-control" asp-for="DateApprove">

                    </div>

                    <div class="input-group m-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon3">Start Date</span>
                        </div>


                        <input type="date" class="form-control" asp-for="From">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon3">End Date</span>
                        </div>

                        <input type="date" class="form-control" asp-for="To">



                    </div>



                    <div class="mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">Notes</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3">@Model.Notes</textarea>
                    </div>






                </div>


            </div>
            <div class="form-group d-flex">


                <div class="form-check  w-50  my-auto">
                    <input class="form-check-input " type="checkbox"
                        
                           asp-for="Approve"    
                          checked>
                    <label class="form-check-label"
                           for="flexCheckChecked">
                        Approve Vacation
                    </label>
                </div>

                <div class="w-50">
                    <table class="table">

                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Date</th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.RequestDetailsVacation)
                            {
                                <tr>
                                    <th scope="row">@item.Id</th>
                                    <td>@item.VacationDate</td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>



            </div>





            <div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary ">Edit</button>

                </div>
            </div>


        </main>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}