@{
}
@model IEnumerable<GetReportViewModel>

<form asp-action="GetData">
    <div class="col-12 d-flex">

        <div class="col-6">
            <span>From</span>

            <input type="date" class="form-control" name="from" value="@(DateTime.Now.ToString("yyyy"))-01-01" />

        </div>
        <div class="col-6">
            <span>To</span>
            <input type="date" class="form-control" name="to" value="@(DateTime.Now.ToString("yyyy"))-01-01" />
        </div>


    </div>


    <div class="col-12 d-flex">
        <div class="col-6">
            <span class="my-3">Employee</span>
            <select class="form-select" name="Id"
                    aria-label="Default select example"
                    asp-items="@(new SelectList(ViewBag.Emps,"Id","Name"))">
                <option selected>Select Employee</option>

            </select>
        </div>
        <div class="col-6 mt-3">
            <button type="submit" class="btn btn-primary">Search</button>
            <button type="button" class="btn btn-success">Print</button>

            <button type="button" class="btn btn-dark">Download PDF</button>
        </div>



    </div>
    </form>
@if (Model != null)
{

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>CountDayVacation</th>
                <th>Total</th>
                <th>Remain</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.CountDayVacation</td>
                    <td>@item.Total</td>
                    <td>@item.Remain</td>

                </tr>
            }
        </tbody>
    </table>
}







